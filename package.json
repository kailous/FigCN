{
  "name": "FigCN",
  "version": "1.1.0",
  "description": "Figma 汉化代理助手（Electron + mitmproxy）",
  "main": "main.js",
  "productName": "FigCN",
  "author": "kailous",
  "scripts": {
    "start": "OS_ACTIVITY_MODE=disable ELECTRON_ENABLE_LOGGING=false electron .",
    "dist": "electron-builder -m"
  },
  "build": {
    "appId": "com.rainforest.figcn.beta",
    "productName": "FigCN(Beta)",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "static/index.html",
      "static/js/renderer.js",
      "static/css/style.css",
      "node_modules/**"
    ],
    "extraResources": [
      { "from": "venv", "to": "venv" },
      { "from": "figcn_injector.py", "to": "figcn_injector.py" },
      { "from": "figcn_rules.yaml", "to": "figcn_rules.yaml" }
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": false
    },
    "afterPack": "scripts/afterPack.js",
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "pac-resolver": "^7.0.1"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "^26.0.12"
  }
}