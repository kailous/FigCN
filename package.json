{
  "name": "FigCN",
  "version": "1.5.0",
  "description": "Figma 汉化代理助手（Electron + mitmproxy）",
  "main": "main.js",
  "productName": "FigCN",
  "author": "kailous",
  "scripts": {
    "start": "OS_ACTIVITY_MODE=disable ELECTRON_ENABLE_LOGGING=false electron .",
    "dist": "electron-builder -m"
  },
  "build": {
    "appId": "com.rainforest.figcn.beta",
    "productName": "FigCN(Beta)",
    "asar": true,
    "compression": "store",
    "icon": "icon/icon.icns",

    "files": [
      "main.js",
      "preload.js",
      "modules/**",
      "static/**",
      "icon/**",
      "node_modules/**",
      "!**/*.map",
      "!**/test/**",
      "!**/__tests__/**"
    ],

    "extraResources": [
      { "from": "vendor/mitmproxy.app", "to": "mitmproxy.app" },
      { "from": "figcn_injector.py",    "to": "figcn_injector.py" }
    ],

    "mac": {
      "icon": "icon/icon.icns",
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSUIElement": true
      }
    },

    "afterPack": "scripts/afterPack.js",

    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "pac-resolver": "^7.0.1"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "^26.0.12"
  }
}