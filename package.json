{
  "name": "FigCN",
  "version": "1.5.1",
  "description": "Figma 汉化代理助手（Electron + mitmproxy）",
  "main": "main.js",
  "productName": "FigCN",
  "author": "kailous",
  "scripts": {
    "start": "OS_ACTIVITY_MODE=disable ELECTRON_ENABLE_LOGGING=false electron .",
    "dist": "node scripts/runDist.js",
    "dist:mac:arm64": "electron-builder --mac dmg zip --arm64",
    "dist:mac:intel": "electron-builder --mac dmg zip --x64",
    "dist:mac:all": "npm run dist:mac:arm64 && npm run dist:mac:intel",
    "dist:win": "electron-builder --win nsis zip --x64 --arm64"
  },
  "build": {
    "appId": "com.rainforest.figcn.beta",
    "productName": "FigCN(Beta)",
    "asar": true,
    "compression": "store",
    "icon": "icon/icon.icns",

    "files": [
      "main.js",
      "preload.js",
      "modules/**",
      "static/**",
      "icon/**",
      "node_modules/**",
      "!**/*.map",
      "!**/test/**",
      "!**/__tests__/**"
    ],

    "extraResources": [
      { "from": "figcn_injector.py", "to": "figcn_injector.py" }
    ],

    "mac": {
      "icon": "icon/icon.icns",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] },
        { "target": "zip", "arch": ["arm64", "x64"] }
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSUIElement": true
      },
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "extraResources": [
        { "from": "vendor/mitmproxy.app", "to": "mitmproxy.app" }
      ]
    },

    "win": {
      "icon": "icon/icon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "extraResources": [
        { "from": "vendor/mitmproxy-win64", "to": "mitmproxy-win64" }
      ]
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },

    "afterPack": "scripts/afterPack.js",

    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "pac-resolver": "^7.0.1"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "^26.0.12"
  }
}
